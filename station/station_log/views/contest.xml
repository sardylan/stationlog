<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_contest_tree">
            <field name="name">view_contest_tree</field>
            <field name="model">station_log.contest</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ts_start" widget="datetime_tz"/>
                    <field name="ts_end" widget="datetime_tz"/>
                    <field name="qso_count"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_contest_form">
            <field name="name">view_contest_form</field>
            <field name="model">station_log.contest</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="name" class="w-25"/>
                        </h1>
                        <group col="4">
                            <field name="ts_start" widget="datetime_tz"/>
                            <field name="ts_end" widget="datetime_tz"/>
                        </group>
                        <group>
                            <field name="qso_ids"
                                   context="{'tree_view_ref' : 'station_log.view_qso_tree_contest'}"/>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="note" tabindex="21"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_contest_calendar">
            <field name="name">view_contest_calendar</field>
            <field name="model">station_log.contest</field>
            <field name="arch" type="xml">
                <calendar string="contest"
                          date_start="ts_start"
                          date_stop="ts_end"
                          mode="month">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="view_contest_search">
            <field name="name">view_contest_search</field>
            <field name="model">station_log.contest</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <separator/>
                    <field name="ts_start" widget="datetime_tz"/>
                    <field name="ts_end" widget="datetime_tz"/>
                    <separator/>
                </search>
            </field>
        </record>

    </data>
</odoo>
