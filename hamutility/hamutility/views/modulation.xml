<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="modulation_tree">
            <field name="name">Modulation</field>
            <field name="model">hamutility.modulation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="emission"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="modulation_form">
            <field name="name">Modulation</field>
            <field name="model">hamutility.modulation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="name" class="w-25"/>
                        </h1>
                        <group>
                            <field name="modulation" class="w-75"/>
                            <field name="signal" class="w-75"/>
                            <field name="information" class="w-75"/>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
