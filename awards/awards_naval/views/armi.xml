<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_armi_tree">
            <field name="name">view_armi_tree</field>
            <field name="model">awards_naval.armi</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="callsign"/>
                    <field name="reference"/>
                    <field name="name"/>
                    <field name="qualifica"/>
                    <field name="marina"/>
                    <field name="svc"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_armi_form">
            <field name="name">view_armi_form</field>
            <field name="model">awards_naval.armi</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="callsign" class="w-25"/>
                        </h1>
                        <h2>
                            <field name="reference" class="w-25"/>
                        </h2>
                        <group>
                            <field name="name"/>
                            <field name="qualifica"/>
                            <field name="marina"/>
                            <field name="svc"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_armi_search">
            <field name="name">view_armi_search</field>
            <field name="model">awards_naval.armi</field>
            <field name="arch" type="xml">
                <search>
                    <field name="callsign"/>
                    <field name="reference"/>
                    <separator/>
                    <field name="name"/>
                    <field name="qualifica"/>
                    <field name="marina"/>
                    <field name="svc"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
