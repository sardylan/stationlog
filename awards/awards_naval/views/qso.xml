<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.ui.view" id="view_qso_tree">
            <field name="name">view_qso_tree</field>
            <field name="model">award_naval.qso</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="callsign"/>
                    <field name="ts" widget="datetime_tz"/>
                    <field name="band"/>
                    <field name="mode"/>
                    <field name="reference"/>
                    <field name="operator"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_qso_form">
            <field name="name">view_qso_form</field>
            <field name="model">award_naval.qso</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="callsign" class="w-25"/>
                        </h1>
                        <group>
                            <field name="ts" widget="datetime_tz"/>
                        </group>
                        <group>
                            <field name="band"/>
                            <field name="mode"/>
                            <field name="reference"/>
                        </group>
                        <group>
                            <field name="operator"/>
                        </group>
                        <group>
                            <field name="reference_auto"/>
                            <field name="rawdata"
                                   class="border border-primary rounded"
                                   widget="ace"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_qso_calendar">
            <field name="name">view_qso_calendar</field>
            <field name="model">award_naval.qso</field>
            <field name="arch" type="xml">
                <calendar string="QSO"
                          date_start="ts"
                          mode="week"
                          color="mode">
                    <field name="callsign"/>
                    <field name="mode"/>
                    <field name="band"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="view_qso_search">
            <field name="name">view_qso_search</field>
            <field name="model">award_naval.qso</field>
            <field name="arch" type="xml">
                <search>
                    <field name="callsign"/>
                    <separator/>
                    <field name="ts"/>
                    <separator/>
                    <field name="band"/>
                    <field name="mode"/>
                    <field name="reference"/>
                    <separator/>
                    <field name="operator"/>
                    <separator/>
                    <field name="reference_auto"/>
                    <field name="rawdata"/>
                </search>
            </field>
        </record>

    </data>
</odoo>
