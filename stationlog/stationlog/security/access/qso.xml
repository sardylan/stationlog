<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data noupdate="0">

        <record model="ir.model.access" id="access_stationlog_qso_user">
            <field name="name">access_stationlog_qso_user</field>
            <field name="model_id" ref="model_stationlog_qso"/>
            <field name="group_id" ref="stationlog.group_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record model="ir.rule" id="rule_stationlog_qso_res_users">
            <field name="name">rule_stationlog_qso_res_users</field>
            <field name="model_id" ref="model_stationlog_qso"/>
            <field name="groups" eval="[(4, ref('stationlog.group_user'))]"/>
            <field name="domain_force">[('logbook_id.res_users_ids', 'in', [user.id])]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record model="ir.rule" id="rule_stationlog_qso_res_users_read">
            <field name="name">rule_stationlog_qso_res_users</field>
            <field name="model_id" ref="model_stationlog_qso"/>
            <field name="groups" eval="[(4, ref('stationlog.group_user'))]"/>
            <field name="domain_force">[('logbook_id.read_res_users_ids', 'in', [user.id]), ('logbook_id.res_users_ids', 'not in', [user.id])]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
